page {
  background-color: #f5f5f5;
  padding-bottom: 140rpx;
}
.address {
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 15rpx;
  margin: 10rpx;
  border: 4px solid transparent;
  background: linear-gradient(white, white) padding-box, repeating-linear-gradient(-45deg, #ff0000 0, #ff0000 20%, transparent 0, transparent 25%, #5588aa 0, #5588aa 44%, transparent 0, transparent 50%) 0/40px 40px;
  animation: ants 12s linear infinite;
}
.address .address_btn {
  margin: 20rpx;
  padding: 20rpx;
  display: flex;
}
.address .address_btn .address_add_button {
  width: 60%;
}
.address .address_btn .address_text {
  flex: 5;
  align-items: center;
}
.address .address_name_phone {
  display: flex;
}
.address .address_name_phone .user_address {
  flex: 5;
}
.address .address_name_phone view.address_add_button_view {
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: flex-end;
}
.address .address_name_phone view.address_add_button_view .arrow {
  display: flex;
  align-items: center;
  justify-content: center;
}
