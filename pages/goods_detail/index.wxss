page {
  background-color: #f4f4f4;
  padding-bottom: 140rpx;
}
.mark {
  position: fixed;
  z-index: 10;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.75);
}
.title {
  text-align: center;
  color: #555555;
  font-size: 20rpx;
  background-color: #f4f4f4;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
}
.detail image {
  width: 750rpx;
  display: block;
  padding: 0;
  margin: 0;
}
.dd2 {
  height: 66rpx;
}
.dd2 image {
  width: 100%;
}
.toolbar {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 140rpx;
  padding-right: 10rpx;
  padding-left: 10rpx;
  padding-bottom: 30rpx;
  background-color: #fff;
  display: flex;
}
.toolbar .toolitem {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  position: relative;
}
.toolbar .toolitem button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.toolbar .btn_car {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #ffa500;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}
.toolbar .btn_buy {
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #eb4450;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}
.detail-box {
  position: fixed;
  z-index: 10;
  bottom: -550rpx;
  height: 550rpx;
  width: 100%;
  background-color: #fff;
  border-top-right-radius: 20rpx;
  border-top-left-radius: 20rpx;
}
.detail-box .good_content {
  padding: 5rpx;
  display: flex;
}
.detail-box .good_content .c_l {
  width: 30%;
  padding: 20rpx;
}
.detail-box .good_content .c_l .good_image {
  width: 100%;
  height: 100%;
}
.detail-box .good_content .c_r {
  width: 70%;
}
.detail-box .good_content .c_r .price {
  padding-top: 50rpx;
  padding-left: 15rpx;
  color: var(--themeColorqq);
  font-size: 32rpx;
  font-weight: 600;
}
.detail-box .good_content .c_r .title {
  padding-right: 100rpx;
  padding-top: 15rpx;
  padding-left: 15rpx;
  background-color: #fff;
  text-align: left;
  font-size: 26rpx;
  font-weight: 300;
  color: #333333;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.detail-box .numtool {
  height: 52rpx;
  width: 100%;
}
.detail-box .numtool .numtooltitle {
  padding-left: 20rpx;
  float: left;
  margin-top: 14rpx;
  height: 52rpx;
  text-align: center;
  line-height: 52rpx;
}
.detail-box .numtool .tool_r {
  padding-right: 20rpx;
}
.detail-box .numtool .tool_r .control {
  margin-top: 14rpx;
  float: right;
  height: 52rpx;
  width: 52rpx;
  background-color: #e3e3e3;
  text-align: center;
  line-height: 52rpx;
  color: #666;
  font-size: 36rpx;
  border-radius: 5rpx;
  margin-left: 4rpx;
}
.detail-box .numtool .tool_r .num {
  width: 100rpx;
  font-size: 26rpx;
  background-color: #f0f0f0;
  font-family: Arial, Helvetica, sans-serif;
}
.detail-box .confirm {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 90rpx;
  margin-top: 100rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  border-radius: 40rpx;
  margin-bottom: 70rpx;
  background-color: #ffa500;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}
