<button type="primary" bindtap="ongetUserInfo" lang="zh_CN">+</button>
<!-- 模糊的背景 开始 -->
<view class="mark" hidden='{{selHidden}}' bindtap='hiddenSel'></view>
<!-- 背景结束 -->
<view class="title top">宝贝详情</view>
<view class="detail " wx:for="{{goodsdetial}}" wx:key="*this">
    <image mode="widthFix" src="{{item}}"></image>
</view>
<!-- 底部工具栏 -->
<view class="toolbar">
    <view class="toolitem">
        <view class="iconfont icon-kefu"></view>
        <view>客服</view>
        <button open-type="contact"></button>
    </view>
    <view class="toolitem">
        <view class="iconfont icon-fenxiang1"></view>
        <view>分享</view>
        <button open-type="share"></button>
    </view>
    <!-- 跳转至tabbar navigator 需要open-type="switchTab" -->
    <navigator url="/pages/cart/index" open-type="switchTab" class="toolitem">
        <view class="iconfont icon-che"></view>
        <view>购物车</view>
    </navigator>
    <view class="toolitem btn_car" bindtap="addcat">加入购物车</view>
    <view class="toolitem btn_buy" bindtap="buyit">立即购买</view>
</view>
<!-- 上弹的窗口 -->
<view class="detail-box" animation="{{animationDataSel}}">
    <view class="good_content">
        <view class="c_l">
            <image class="good_image" src="https://img.alicdn.com/imgextra/i3/2210072440085/O1CN01H1PGOH1CUyJpFRcmY_!!2210072440085.jpg" mode="widthFix"></image>
        </view>
        <view class="c_r">
            <view class="price">￥6666</view>
            <view class="title">顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶</view>
        </view>
    </view>
    <view class="numtool">
        <view class="numtooltitle">购买数量</view>
        <view class="tool_r">
            <view class="control {{plusBan}}" bindtap='plus'>+</view>
            <view class="control num">55</view>
            <view class="control {{minusBan}}" bindtap='minus'>-</view>
        </view>
    </view>
    <view class="confirm" wx:if="{{addorbuy}}">加入购物车</view>
    <view class="confirm" wx:else>立即购买</view>
</view>