<view class="title top">宝贝详情</view>
<view class="detail " wx:for="{{goodsdetial}}" wx:key="*this">
    <image mode="widthFix" src="{{item}}"></image>
</view>
<!-- 底部工具栏 -->
<view class="toolbar">
    <view class="toolitem">
        <view class="iconfont icon-kefu"></view>
        <view>客服</view>
        <button open-type="contact"></button>
    </view>
    <view class="toolitem">
        <view class="iconfont icon-fenxiang1"></view>
        <view>分享</view>
        <button open-type="share"></button>
    </view>
    <!-- 跳转至tabbar navigator 需要open-type="switchTab" -->
    <navigator url="/pages/cart/index" open-type="switchTab" class="toolitem">
        <view class="iconfont icon-che"></view>
        <view>购物车</view>
    </navigator>
    <view class="toolitem btn_car" bindtap="addcat">加入购物车</view>
    <view class="toolitem btn_buy">立即购买</view>
</view>
<!-- 底部加入购物车上弹小窗口 -->
<page-container show="{{show}}" round="true" overlay="true" duration="300" position="bottom" close-on-slide-down="{{false}}" custom-style="{{customStyle}}" overlay-style="background-color: rgba(0, 0, 0, 0.7); filter: blur(4px);">
    <view class="a"></view>
</page-container>