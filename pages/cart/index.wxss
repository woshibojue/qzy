page {
  background-color: #f5f5f5;
  padding-bottom: 140rpx;
}
.address {
  background-color: #ffffff;
  border-radius: 15rpx;
  margin: 10rpx;
  display: block;
  border: 4px solid transparent;
  background: linear-gradient(white, white) padding-box, repeating-linear-gradient(-45deg, #ff0000 0, #ff0000 20%, transparent 0, transparent 25%, #5588aa 0, #5588aa 44%, transparent 0, transparent 50%) 0/40px 40px;
  animation: ants 12s linear infinite;
}
.address .address_btn {
  padding: 20rpx;
  display: flex;
}
.address .address_btn .address_add_button {
  width: 60%;
}
.address .address_btn .address_text {
  flex: 5;
  align-items: center;
}
